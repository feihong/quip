html
  height 100%
  padding 0

body
  margin 0
  padding 0
  display flex
  flex-direction column
  width 100%
  height 100%

header
  padding 0 1em 1em 1em
  border-bottom 1px dashed grey

  div.info
    display flex
    flex-direction row
    align-items center

    div.percent
      margin-right 1em

    div.progress
      flex 1
      margin-right 1em
      margin-bottom 0

#output
  flex 1
  padding 1em
  width 100%

  div
    display inline-block
    color gray
    font-size 2em
    margin 0 0.5em 0.5em 0
    padding 0.4em 0.8em
    border 1px solid gray
    border-radius 8px
    box-shadow 5px 5px 5px gainsboro
