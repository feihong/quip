html
  height 100%
  padding 0

body
  margin 0
  padding 0
  display flex
  flex-direction column
  width 100%
  height 100%

header
  padding 0 1em 1em 1em

div.row
  display flex
  flex-direction row

div.percent
  margin-right 1em

div.progress-container
  height 25px
  flex 1
  border 1px solid lightgray
  margin-bottom 1em

  div.progress
    height 100%
    margin 0

#output
  flex 1
  padding 1em
  width 100%

  div
    color white
    display inline-block
    font-size 2em
    margin 0 0.5em 0.5em 0
    padding 0.4em 0.8em
    border-radius 8px
