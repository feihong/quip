html
  height 100%
  padding 0

body
  margin 0
  padding 0
  display flex
  flex-direction column
  width 100%
  height 100%

header
  padding 0 1em 1em 1em

div.row
  display flex
  flex-direction row

div.percent
  margin-right 1em

div.progress-container
  height 20px
  flex 1
  background-color whitesmoke
  border 1px solid gainsboro
  margin-bottom 1em

  div.progress
    height 100%
    background-color lightsteelblue

#grid
  flex 1
  padding 0 1em
