html
  height 100%
  padding 0

body
  margin 0
  padding 0
  display flex
  flex-direction column
  width 100%
  height 100%

header
  padding 0 1em 1em 1em

div.progress-container
  height 20px
  width 100%
  background-color whitesmoke
  border 1px solid gainsboro
  margin-bottom 1em

  div.progress
    height 100%
    background-color lightsteelblue

#status
  margin-bottom 1em

#output
  flex 1
  font-size 1.2em
  color lightgreen
  background-color black
  padding 0 1em
  overflow-y scroll
